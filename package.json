{
  "name": "infra",
  "packageManager": "yarn@4.1.1",
  "workspaces": [
    "packages/*",
    "stacks/*"
  ],
  "scripts": {
    "proxy:dashboard": "kubectl -n kubernetes-dashboard-11673d0b port-forward svc/kubernetes-dashboard-70f42b4a-kong-proxy 8443:443",
    "create-dashboard-token": "kubectl -n kubernetes-dashboard-11673d0b create token dashboard-account-42261139 --duration=100000h",
    "generate-crds": "crd2pulumi -n --nodejsPath packages/crds --force https://github.com/cert-manager/cert-manager/releases/download/v1.14.5/cert-manager.yaml https://raw.githubusercontent.com/traefik/traefik/v3.0/docs/content/reference/dynamic-configuration/kubernetes-crd-definition-v1.yml"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  }
}
